/* components/fast-scroll/fast-scroll.wxss */
.fast-scroll {
  height: 100vh;
  width: 100vw;
}

.fast-scroll-bar {
  position: fixed;
  height: 100vh;
  width: 30rpx;
  right: 10rpx;
  top: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  z-index: 10;
}

.fast-scroll-bar-item {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  line-height: 30rpx;
  width: 30rpx;
  height: 30rpx;
  color: #999999;
}

.fast-scroll-bar-item.active {
  color: #eeeeee;
  background-color: #333333;
  border-radius: 50%;
}