/* components/fast-scroll/fast-scroll.wxss */
.fast-scroll {
  height: 100vh;
  width: 100vw;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.fast-scroll-group {
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.fast-scroll-group-tag {
  font-size: 40rpx;
  line-height: 40rpx;
  color: #000000;
  margin: 0 22rpx;
}

.fast-scroll-group:before,
.fast-scroll-group:after {
  content: '';
  display: inline-block;
  width: 100px;
  border-top: 1px solid #EEEEEE;
  flex-grow: 1;
}

.fast-scroll-item {
  padding: 0 30rpx;
  font-size: 32rpx;
  color: #666666;
  background:#F5F5F5;
}

.fast-scroll-item + .fast-scroll-item {
  margin-top: 16rpx;
}

.fast-scroll-item + .fast-scroll-group {
  margin-top: 40rpx;
}

.fast-scroll-item.string-item {
  padding: 20rpx 30rpx;
}

.fast-scroll-item.object-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.fast-scroll-item-pic {
  width: 260rpx;
  height: 260rpx;
}

.fast-scroll-item-text {
  width: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  color: #000000;
  font-size: 32rpx;
  font-weight: 600;
}

.subtitle {
  color: #999999;
  font-size: 24rpx;
  font-weight: 100;
}

.title + .subtitle {
  margin-top: 20rpx;
}

.fast-scroll-bar {
  position: fixed;
  height: 100vh;
  width: 40rpx;
  top: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 10;
}

.fast-scroll-bar-item {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  line-height: 30rpx;
  width: 30rpx;
  height: 30rpx;
  color: #999999;
}

.fast-scroll-bar-item.active {
  color: #EEEEEE;
  background-color: #333333;
  border-radius: 50%;
}