/* components/fast-scroll/fast-scroll.wxss */
.fast-scroll {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
}

.fast-scroll-bar {
  position: fixed;
  height: 100vh;
  width: 32rpx;
  right: 0;
  top: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #999999;
}
